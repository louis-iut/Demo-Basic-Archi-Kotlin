    <TextView
        android:id="@+id/fragment_comic_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/fragment_comic_detail_image"
        android:layout_width="@dimen/image_width_size"
        android:layout_height="@dimen/image_height_size"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_comic_detail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"/>

    <TextView
        android:id="@+id/fragment_comic_detail_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"/>

        <TextView
            android:id="@+id/fragment_comic_detail_creators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"/>

    </LinearLayout>

    <TextView
        android:id="@+id/fragment_comic_detail_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
